<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <category label="Torrents">
        <setting label="Torrent Clients:" type="lsep"/>
        <setting id="torrent_client" type="labelenum" label="Client" values="Torrest|None" default="Torrest"/>
    </category>

    <category label="Indexers">
        <setting label="Indexer:" type="lsep"/>
        <setting id="selected_indexer" type="labelenum" label="Indexer" values="Jackett|Prowlarr" default="Jackett"/>
    
        <setting label="Jackett Configuration:" type="lsep"/>
        <setting id="jackett_apikey" type="text" label="Jackett Api Key" default=""/>
        <setting id="jackett_host" type="text" label="Jackett Host" default=""/>
        <setting id="jackett_desc_length" type="number" label="Description length" default="100"/>
        <setting id="jackett_insecured" type="bool" label="Insecured connection" default="false"/>
        <setting id="jackett_sort_by" type="labelenum" label="Sort by" values="Seeds|Size|Date" default="Seeds"/>
   
        <setting label="Prowlarr Configuration:" type="lsep"/>
        <setting id="prowlarr_apikey" type="text" label="Prowlarr Api Key" default=""/>
        <setting id="prowlarr_host" type="text" label="Prowlarr Host" default=""/>
        <setting id="prowlarr_indexer_ids" type="text" label="Indexer Ids" default=""/>
        <setting id="prowlarr_anime_indexer_ids" type="text" label="Anime Indexer Ids" default=""/>
        <setting id="prowlarr_desc_length" type="number" label="Description length" default="100"/>
        <setting id="prowlarr_insecured" type="bool" label="Insecured connection" default="false"/>
        <setting id="prowlarr_sort_by" type="labelenum" label="Sort by" values="Seeds|Size" default="Seeds"/>
    </category>

    <category label="TMDB">
        <setting label="TMDB Configuration:" type="lsep"/>
        <setting id="tmdb_apikey" type="text" label="TMDB Api Key" default=""/>
    </category>
</settings>
